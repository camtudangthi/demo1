<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ProductHotActivity">

    <ImageView
        android:id="@+id/img_close_list_user2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="closeTop"
        app:srcCompat="@drawable/ic_close" />

    <TextView
        android:id="@+id/tv_titleTop"
        style="@style/titleManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top bán chạy" />

    <EditText
        android:id="@+id/edt_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_titleTop"
        android:layout_marginVertical="10dp"
        android:inputType="number"
        android:typeface="serif"
        android:hint="Tháng..." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edt_month" />

</RelativeLayout>