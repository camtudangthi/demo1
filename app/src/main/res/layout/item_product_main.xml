<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_item_product_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_item_picture"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:stateListAnimator="@anim/blink"
            android:src="@color/xanh"/>

        <ImageView
            android:id="@+id/img_pro_new"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/img" />

        <TextView
            android:id="@+id/tv_item_price"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_below="@+id/img_item_picture"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_item_name"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_below="@+id/tv_item_price"
            android:text="" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>